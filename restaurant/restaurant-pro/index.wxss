/* pages/restaurant/restaurant-pro/index.wxss */
page,.p-main{ height: 100%;}
.p-scroll{ height: 100%; background: #fff;}
.p-top{ overflow: hidden;}
.p-img{ position: relative; padding-bottom: 60%;}
.p-img-item{ position: absolute; left: 0; top: 0; width: 100%; height: 100%;}
.p-info{ margin: 40rpx; position: relative;}

.p-detail{ padding: 40rpx;}

.count-set{ position:absolute; bottom: 0; right: 0;}
.buy-couts{ vertical-align: top;}
.buy-couts,.count-btn{display: inline-block; width: 56rpx; height: 56rpx;font-size: 36rpx;overflow: hidden;}
.buy-couts{ width: 80rpx;}
.count-btn{ font-weight: bold; line-height:60rpx; background:#09bb07; color: #fff; border-radius: 50%;}
.count-btn.gridFourCirle{ background: #fff; color: #888;}

.ress-float{ height: 92rpx; background: #fff; position: relative; z-index: 9999;}
.float-cart{ padding: 0 20rpx; position: relative;}
.cart-circle{ width: 100rpx; height: 100rpx; background: #09bb07; color: #fff; text-align: center; line-height: 100rpx; font-size:40rpx; border-radius:50%; position: relative; margin-top: -30rpx;}
.counts{ background:#e64340; color: #fff; position: absolute; min-width:60rpx; height: 60rpx; border-radius:60rpx; line-height: 60rpx; -webkit-transform: scale(0.7);transform: scale(0.7);  -webkit-transform-origin: center top;transform-origin: center top; border: 1px solid #fff; font-size: 28rpx;}
.float-price{ padding: 0 20rpx; line-height: 92rpx;}
.float-btn-s{ border-radius: 0; width: 240rpx; height: 92rpx; line-height: 92rpx;}
.float-btn-s::after{ display: none;}

.ress-comm{ background: #fff; overflow: hidden;}
.comm-desc{ padding:40rpx 0 30rpx;}
.comm-item{ padding: 30rpx;}
.comm-info { line-height: 56rpx;}
.comm-name-score{ background: #09bb07; color: #fff; font-size: 32rpx; border-radius: 40rpx; padding:0 16rpx; -webkit-transform: scale(0.6); transform: scale(0.6); display: inline-block;}
.comm-text{margin-top:16rpx;}
.comm-album{ margin-top: 10rpx;}
.comm-album-box{ width: 19%; float: left; padding-bottom: 19%; position: relative; margin-right: 1.25%; margin-top: 10rpx;}
.comm-album-box:nth-child(5n){ margin-right: 0;}
.comm-album-item{ position: absolute; left: 0; top: 0; width: 100%; height:100%;}

.ress-scroll{ height: 100%; width: 100%;}

.ress-bus{ background: #fff; overflow: hidden;}
.bus-pre-item { padding:30rpx 0;}

.bus-avatar{ padding-bottom:60%; position: relative;}
.bus-avatar-img{ width: 100%; height: 100%; position: absolute; left: 0; top: 0; border-radius:6rpx;}
.res-star{ display: inline-block; margin-left: 20rpx;}
.cart-circle.cart-none{background: #888;}
.cart-none-float{background: #333;}
.red-none{color:#fff;font-size:14px;}
.hidden {margin-top:-220rpx;}

.mallcart{ position: fixed; left: 0; top: 0; width: 100%; bottom: 92rpx; z-index: 9998;}
.mc-bg{ position: absolute; left: 0; bottom: 0; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.3);}
.mc-box{ background: #fff; position:absolute; left: 0; bottom: 0; width: 100%; padding: 30rpx 30rpx 0; z-index: 1;}
.mc-name{ width: 40%;}
.mc-item{ padding: 30rpx 0;}
.mc-t{ padding:30rpx; margin-top: -30rpx; line-height:40rpx;float: right;padding-right: 10rpx;}
.mc-m{ line-height: 40rpx; position: relative;}
.mc-set{ bottom: 50%; -webkit-transform: translateY(50%);transform: translateY(50%);}

.count-spec{ position: absolute; right: 0; bottom: 0; height:112rpx; padding:0 50rpx; border: 1px solid #ddd; border-radius: 120rpx; display:table; vertical-align: bottom; font-size:48rpx; line-height: 112rpx; -webkit-transform: scale(0.5);transform: scale(0.5); -webkit-transform-origin: right bottom;transform-origin: right bottom;}
.count-spec-c{ position: absolute; min-width: 80rpx; padding: 0 25rpx; height: 80rpx; line-height: 80rpx; border-radius:40rpx; text-align: center;background: #e64340; color: #fff; font-size:48rpx; border: 1px solid #fff; right:-30rpx; top:-30rpx;}

.guige_show{display: block;}
.spec-popup{ z-index: 999;}
.spec-box{ background: #fff; border-radius: 3px; padding:30rpx; width: 82%;}
.sp-item{ margin-top: 16rpx; font-size:28rpx;}
.sp-n{ line-height:56rpx; font-weight: bold;}
.sub-i{ overflow: hidden;}
.sub-i-i{zoom: 0.5; font-size:64rpx;}
.sp-item-i{ padding:56rpx 48rpx; color: #888; border-radius: 100px; line-height: 0; margin-left:20rpx; margin-bottom: 24rpx; float: left;}
.s-r-box-btn{ height: 72rpx; line-height: 72rpx; position: relative; font-size: 32rpx;}

.flex .sub{ overflow: visible;}
.ress-comm.sub,.ress-bus.sub{ overflow: hidden;}

@import "/css/DuoguanDish/DuoguanDish-template-default.wxss";